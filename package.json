{
  "name": "root",
  "private": true,
  "scripts": {
    "clean": "lerna run clean",
    "build": "npm run build:main && npm run build:plugins",
    "build:main": "lerna run --scope {reboost,@reboost/create-app} build",
    "build:plugins": "lerna run --parallel --scope @reboost/plugin-* build",
    "watch": "lerna run --parallel watch",
    "check-updates": "lerna exec --concurrency 1 -- ncu",
    "lint": "eslint \"packages/**/src/**/*.{js,ts}\"",
    "test": "lerna run test:ci"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "lerna": "^3.22.1",
    "plop": "^2.7.4",
    "typescript": "^4.0.3"
  }
}
