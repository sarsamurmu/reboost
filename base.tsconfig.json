{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "exclude": [
    "**/node_modules/**"
  ]
}
