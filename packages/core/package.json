{
  "name": "reboost",
  "version": "0.12.1",
  "description": "A super fast dev server for rapid web development",
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "clean": "node ../../rmDist",
    "build": "concurrently -r \"npm:build:browser\" \"npm:build:node\"",
    "build:browser": "tsc -p ./src/browser",
    "build:node": "tsc -p ./src/node",
    "build:mapped": "concurrently -r \"npm:build:browser\" \"npm:build:node -- --sourceMap\"",
    "build:watch": "concurrently -r \"npm:build:browser -- -w\" \"npm:build:node -- -w\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:build": "tsc -p ./tests-src/build.tsconfig.json && node ./tests-src/createRequireAll",
    "test:build:watch": "tsc -p ./tests-src/build.tsconfig.json -w",
    "test:ci": "npm run build:mapped && npm run test:build && && jest --clearCache && jest --runInBand"
  },
  "keywords": [
    "fast",
    "super-fast",
    "hot-reload",
    "esm",
    "ecmascript-moudles",
    "commonjs-modules",
    "no-bundle",
    "dev-server",
    "web-development",
    "rapid-development"
  ],
  "repository": "github:sarsamurmu/reboost",
  "author": "Sarsa Murmu <sarsamurmu05@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/code-frame": "^7.10.4",
    "@babel/generator": "^7.11.4",
    "@babel/parser": "^7.11.4",
    "@babel/traverse": "^7.11.0",
    "@babel/types": "^7.11.0",
    "@koa/cors": "^3.1.0",
    "@types/babel__generator": "^7.6.1",
    "@types/babel__traverse": "^7.0.13",
    "@types/koa": "^2.11.4",
    "anymatch": "^3.1.1",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.2",
    "enhanced-resolve": "^5.0.0-beta.10",
    "esbuild": "^0.6.27",
    "icss-utils": "^4.1.1",
    "koa": "^2.13.0",
    "koa-proxies": "^0.11.0",
    "koa-send": "^5.0.1",
    "magic-string": "^0.25.7",
    "md5-file": "^5.0.0",
    "node-html-parser": "^1.2.20",
    "open": "^7.1.0",
    "portfinder": "^1.0.28",
    "postcss": "^7.0.32",
    "postcss-load-config": "^2.1.0",
    "postcss-modules-extract-imports": "^2.0.0",
    "postcss-modules-local-by-default": "^3.0.3",
    "postcss-modules-scope": "^2.2.0",
    "postcss-modules-values": "^3.0.0",
    "source-map": "^0.7.3",
    "tslib": "^2.0.1",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.1",
    "@types/icss-utils": "^4.1.0",
    "@types/jest": "^26.0.10",
    "@types/koa-send": "^4.1.2",
    "@types/koa__cors": "^3.0.1",
    "@types/node": "^14.6.0",
    "@types/postcss-load-config": "^2.0.1",
    "@types/postcss-modules-extract-imports": "^2.0.0",
    "@types/postcss-modules-local-by-default": "^1.2.0",
    "@types/postcss-modules-scope": "^1.1.0",
    "@types/postcss-modules-values": "^3.0.0",
    "@types/puppeteer": "^3.0.1",
    "@types/ws": "^7.2.6",
    "concurrently": "^5.3.0",
    "jest": "^26.4.1",
    "puppeteer": "^5.2.1",
    "typescript": "^3.9.7"
  }
}
