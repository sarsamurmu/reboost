{
  "name": "reboost",
  "version": "0.17.2",
  "description": "A super fast dev server for rapid web development",
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "engines": {
    "node": ">= 10.3.0"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "clean": "node ../../prepare rm-dist",
    "version": "node ../../prepare update-changelog",
    "build": "concurrently -r \"npm:build:browser\" \"npm:build:node\"",
    "build:browser": "tsc -p ./src/browser",
    "build:node": "tsc -p ./src/node",
    "build:mapped": "concurrently -r \"npm:build:browser\" \"npm:build:node -- --sourceMap\"",
    "build:watch": "concurrently -r \"npm:build:browser -- --incremental -w\" \"npm:build:node -- --sourceMap --incremental -w\"",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "test:build": "tsc -p ./tests-src/build.tsconfig.json && node ./tests-src/createRequireAll",
    "test:build:watch": "tsc -p ./tests-src/build.tsconfig.json --incremental -w",
    "test:ci": "npm run build:mapped && npm run test:build && npm run test:coverage"
  },
  "keywords": [
    "fast",
    "super-fast",
    "hot-reload",
    "esm",
    "ecmascript-moudles",
    "commonjs-modules",
    "no-bundle",
    "dev-server",
    "web-development",
    "rapid-development"
  ],
  "repository": "github:sarsamurmu/reboost",
  "author": "Sarsa Murmu <sarsamurmu05@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/code-frame": "^7.10.4",
    "@babel/generator": "^7.12.5",
    "@babel/parser": "^7.12.5",
    "@babel/traverse": "^7.12.5",
    "@babel/types": "^7.12.6",
    "@koa/cors": "^3.1.0",
    "@types/babel__generator": "^7.6.2",
    "@types/babel__traverse": "^7.0.15",
    "@types/koa": "^2.11.6",
    "anymatch": "^3.1.1",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.3",
    "enhanced-resolve": "^5.3.1",
    "esbuild": "^0.8.4",
    "hash-sum": "^2.0.0",
    "icss-utils": "^5.0.0",
    "koa": "^2.13.0",
    "koa-proxies": "^0.11.0",
    "koa-send": "^5.0.1",
    "magic-string": "^0.25.7",
    "md5-file": "^5.0.0",
    "node-html-parser": "^1.4.8",
    "open": "^7.3.0",
    "portfinder": "^1.0.28",
    "postcss": "^8.1.6",
    "postcss-modules-extract-imports": "^3.0.0",
    "postcss-modules-local-by-default": "^4.0.0",
    "postcss-modules-scope": "^3.0.0",
    "postcss-modules-values": "^4.0.0",
    "postcss-value-parser": "^4.1.0",
    "source-map": "^0.7.3",
    "tslib": "^2.0.3",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.2",
    "@types/jest": "^26.0.15",
    "@types/koa__cors": "^3.0.2",
    "@types/koa-send": "^4.1.2",
    "@types/node": "^14.14.6",
    "@types/puppeteer": "^5.4.0",
    "@types/ws": "^7.2.9",
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "puppeteer": "^5.4.1",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.5"
  }
}
