{
  "name": "@reboost/plugin-react-refresh",
  "version": "0.17.0",
  "description": "React Fast Refresh plugin for Reboost",
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "clean": "node ../../rmDist",
    "build": "tsc -p browser.tsconfig.json && tsc -p node.tsconfig.json",
    "watch": "concurrently \"tsc -p browser.tsconfig.json -w\" \"tsc -p node.tsconfig.json -w\""
  },
  "keywords": [
    "reboost",
    "plugin",
    "react-refresh"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sarsamurmu/reboost.git",
    "directory": "packages/plugin-react-refresh"
  },
  "homepage": "https://github.com/sarsamurmu/reboost/tree/primary/packages/plugin-react-refresh",
  "author": "Sarsa Murmu <sarsamurmu05@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.12.3",
    "react-refresh": "^0.9.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.12",
    "concurrently": "^5.3.0",
    "typescript": "^4.0.5"
  }
}
